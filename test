terraform {
  required_providers {
    docker = {
      source = "calxus/docker"
      version = "3.0.0"
    }
  }
}

provider "docker" {
  host     = "ssh://user@192.168.4.199:22"
  ssh_opts = ["-o", "StrictHostKeyChecking=no", "-o", "UserKnownHostsFile=/dev/null"]
}


resource "docker_volume" "private_volume" {
  name = "dbdata"
}

resource "docker_container" "db" {
  image = "mysql:8.0"
  name = "database"
  restart= "on-failure"
  must_run="true"
  memory=2048
  cpu_set="1"
  env = [
    "MYSQL_DATABASE=monitoring",
    "MYSQL_USER=segam_one",
    "MYSQL_ROOT_PASSWORD=Segam_Rpw",
    "MYSQL_PASSWORD=Segam_pw"
  ]

  ports {
    external = 3306
    internal = 3306
  }
  volumes {
    volume_name    = docker_volume.private_volume.name
    container_path = "/var/lib/mysql"
  }
}
