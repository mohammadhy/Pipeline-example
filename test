apiVersion: apps/v1
kind: Deployment
metadata:
  name: segam-dashboard
  namespace: segam
spec:
  replicas: 1
  selector:
    matchLabels:
      app: segam
  template:
    metadata:
      labels:
        app: segam
    spec:
      containers:
        - name: segam-dashboard
          image: 192.168.42.3:5000/segam:0.0.4
          ports:
          - containerPort: 8080
          env:
          - name: spring.datasource.url
            valueFrom:
              configMapKeyRef:
                name: configmap-segam
                key: sql_tokens
          resources:
            limits:
              memory: "512Mi"
              cpu: "500m"
            requests:
              memory: "256Mi"
              cpu: "256m"


apiVersion: v1
kind: Service
metadata:
  name: segam-dashboard
  namespace: segam
spec:
  type: LoadBalancer
  selector:
    app: segam
  ports:
    - name: http
      port: 80
      targetPort: 8080


apiVersion: v1
kind: ConfigMap
metadata:
  name: configmap-segam
  namespace: segam
data:
  sql_tokens: "jdbc:mysql://192.168.42.21:3306/monitoring"
